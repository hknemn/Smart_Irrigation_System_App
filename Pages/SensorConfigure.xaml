<Page x:Class="Smart_Irrigation_System.Pages.SensorConfigure"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Smart_Irrigation_System.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SensorConfigure">

    <Grid>
        <ComboBox x:Name="productNameComboBox" Width="200" Height="30" ItemsSource="{Binding ProductNames}" DropDownOpened="productNameComboBox_DropDownOpened"/>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name="cityNameTextBox" Width="230" Height="35" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14"/>
            <Label x:Name="cityNameLabel" Content="Şehir giriniz (örn: Mamak, Ankara)" Width="230" Margin="0,-25,0,40" FontSize="14"/>
        </Grid>
        <Button x:Name="configureButton" Content="Yapılandır" Height="45" Width="90" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="configureButton_Click"/>
    </Grid>
</Page>
