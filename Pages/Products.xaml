<Page x:Class="Smart_Irrigation_System.Pages.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid>
        <StackPanel>
            <TextBox x:Name="searchTextBox" Width="300" Margin="0,10,0,10" TextChanged="SearchTextBox_TextChanged"/>

            <ListView x:Name="productsListView">
                <ListView.View>
                    <GridView>
                        <!-- <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/> -->
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Temperature" DisplayMemberBinding="{Binding Temperature}" Width="100"/>
                        <GridViewColumn Header="Humidity" DisplayMemberBinding="{Binding Humidity}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel x:Name="addProduct" Margin="0,225,0,10">
            <TextBox x:Name="txtProductName" VerticalContentAlignment="Center" Text="Ürünün İsmini Giriniz" GotFocus="txtProductName_GotFocus" LostFocus="txtProductName_LostFocus" Margin="0,0,0,10" Height="30" FontSize="14" FontStyle="Italic"/>
            <TextBox x:Name="txtTemperature" VerticalContentAlignment="Center" Text="Gerekli Sıcaklık Değerini Giriniz" GotFocus="txtTemperature_GotFocus" LostFocus="txtTemperature_LostFocus" Margin="0,0,0,10" Height="30" FontSize="14" FontStyle="Italic"/>
            <TextBox x:Name="txtHumidity" VerticalContentAlignment="Center" Text="Gerekli Nem Değerini Giriniz" GotFocus="txtHumidity_GotFocus" LostFocus="txtHumidity_LostFocus" Height="30" FontSize="14" FontStyle="Italic"/>
            <Button Content="Ürün Ekle" Click="AddProduct_Click" Width="100" Height="40"/>
        </StackPanel>
    </Grid>
</Page>
