<Page x:Class="Smart_Irrigation_System.Pages.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Smart_Irrigation_System.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports">

    <Grid>
        <ListView x:Name="reportsListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Lokasyon" DisplayMemberBinding="{Binding City_Name}" Width="120"/>
                    <GridViewColumn Header="Ürün" DisplayMemberBinding="{Binding Product_Name}" Width="100"/>
                    <GridViewColumn Header="Sulama Öncesi Nem" DisplayMemberBinding="{Binding Before_Irrigation_Humidity}" Width="120"/>
                    <GridViewColumn Header="Sulama Sonrası Nem" DisplayMemberBinding="{Binding After_Irrigation_Humidity}" Width="120"/>
                    <GridViewColumn Header="Açıklama" DisplayMemberBinding="{Binding Description}" Width="200"/>
                    <GridViewColumn Header="Tarih" DisplayMemberBinding="{Binding Date}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
